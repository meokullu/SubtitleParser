<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyVersion>2.0.1</AssemblyVersion>
    <FileVersion>2.0.1</FileVersion>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Title>Subtitle Parser</Title>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Authors>Okullu</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Subtitle Parser helps you to parse subtitle files.</Description>
    <Copyright>Okullu</Copyright>
    <PackageProjectUrl>https://meokullu.github.io/SubtitleParser/</PackageProjectUrl>
    <RepositoryUrl>https://meokullu.github.io/SubtitleParser/</RepositoryUrl>
    <PackageTags>Subtitle;</PackageTags>
    <PackageReleaseNotes> Added TrimmedLineIndexList publicly available
    Added OutputDLL folder which contains .dll and .xml file.
    Fixing variable name inside of SubtitleBlock. Public members start with uppercase now.
    Icon error was fixed.
    </PackageReleaseNotes>
    <Version>2.0.1</Version>
    <ApplicationIcon>Resources\icon.ico</ApplicationIcon>
    <PackageIcon>Resources\icon.png</PackageIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningLevel>9999</WarningLevel>
    <Optimize>True</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <WarningLevel>9999</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Resources\icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Resources\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="OutputDLL\" />
    <Folder Include="Resources\" />
  </ItemGroup>

</Project>
